  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start:crawler": "node ./dist/crawl.js",
    "start:client": "node ./dist/processors/telegram.js",
    "deploy": "yarn deploy:container; yarn deploy:remote",
    "deploy:container":
      "docker build . -t floschnell/flatcrawl:latest; docker push floschnell/flatcrawl",
    "deploy:remote":
      "ssh root@floschnell.de \"docker pull floschnell/flatcrawl:latest; docker stop flatcrawl; docker rm flatcrawl; docker run -dit --restart unless-stopped --name flatcrawl floschnell/flatcrawl:latest\""
  },
